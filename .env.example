# n8n Core Configuration
N8N_PORT=5678
N8N_ENCRYPTION_KEY=replace-with-a-random-32-byte-hex-string

# Basic Authentication (optional)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=replace-with-a-strong-password

# Database Configuration (Postgres)
DB_TYPE=postgresdb
DB_HOST=postgres
DB_PORT=5432
DB_USER=n8n
DB_PASS=replace-with-a-strong-password
DB_NAME=n8n

# Redis Configuration
REDIS_HOST=redis
REDIS_PASS=replace-with-a-strong-password

# Execution & Queue Mode (recommended for production)
EXECUTIONS_MODE=queue
QUEUE_MODE=bull

# Logging Configuration
LOG_LEVEL=info

# Allow external modules in function nodes (if required)
NODE_FUNCTION_ALLOW_EXTERNAL=true

# Enforce correct permissions for n8n settings file
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true

# AWS S3 Backup Configuration
AWS_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1
# Optional: Provide AWS credentials here or configure interactively.
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Domain and SSL Configuration (for production deployments)
DOMAIN_NAME=your.domain.com
# Leave these blank to use Caddy's auto-TLS; otherwise, specify paths for custom certs.
SSL_CERT=
SSL_KEY=
USER_EMAIL=youremail@example.com

# Auto Update Interval (in seconds; default is 86400 = 24 hours)
UPDATE_INTERVAL=86400

# Additional n8n configuration (optional)
# Example: Increase webhook timeout
WEBHOOK_TUNNEL_URL=
EXECUTIONS_TIMEOUT=3600
